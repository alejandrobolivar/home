    <script>
    const scriptURL = 'https://script.google.com/macros/s/AKfycbxO97u4vK-wbb_fSX5Dt6GJhHd1AcGkhuLAqfD3xHYmPgpglLLQuysmdxv37-lAsbfS/exec';
    const form = document.forms['submit-to-google-sheet'];

    if(form){
        form.addEventListener('submit', e => {
          e.preventDefault();
          const btn = form.querySelector('button');
          const originalText = btn.innerText;
          btn.innerText = "Enviando...";
          btn.disabled = true;

          fetch(scriptURL, { method: 'POST', body: new FormData(form)})
            .then(response => {
                alert("¡Solicitud enviada! Nos pondremos en contacto contigo.");
                form.reset();
                btn.innerText = originalText;
                btn.disabled = false;
            })
            .catch(error => {
                alert("Error de conexión. Contáctanos vía WhatsApp.");
                console.error('Error!', error.message);
                btn.innerText = originalText;
                btn.disabled = false;
            })
        });
    }
    </script>
